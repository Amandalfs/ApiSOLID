generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @default(uuid())
  name            String 
  email           String  @unique
  password_hash   String
  created_at      String  @default(uuid())

  checkIns  CheckIn[]

  @@map("users")
}

model CheckIn {
  id            String     @id @default(uuid())
  created_at    DateTime   @default(now())
  validated_at  DateTime?   

  user      User      @relation(fields: [user_id], references: [id])
  user_id   String

  gyn       Gyn       @relation(fields: [gyn_id], references: [id])
  gyn_id    String

  @@map("check_ins")
}

model Gyn {
  id          String @id @default(uuid())
  title       String
  description String
  phone       String
  latitude    String
  longitude   String

  checkIns  CheckIn[]

  @@map("gyns")
}